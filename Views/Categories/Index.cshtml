@model IEnumerable<LibraryApp.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>


<div class="categories-grid">  
    @foreach (var category in Model)
    {
        <a asp-controller="Books" asp-action="Index" asp-route-id="@category.Id" class="categoryItem"> @Html.DisplayFor(modelItem => category.CategoryName)</a>
    }
</div>


